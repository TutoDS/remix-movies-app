{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "yarn build:css && remix build",
		"build:css": "tailwindcss -o ./app/styles/tailwind.css",
		"dev": "concurrently \"yarn:dev:css\" \"remix dev\" \"yarn:json-server\"",
		"dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
		"json-server": "json-server --watch db.json --port 3333"
	},
	"dependencies": {
		"@remix-run/node": "^1.5.1",
		"@remix-run/react": "^1.5.1",
		"@remix-run/vercel": "^1.6.0",
		"@vercel/node": "^2.0.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"tiny-invariant": "^1.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.5.1",
		"@remix-run/eslint-config": "^1.5.1",
		"@remix-run/serve": "^1.5.1",
		"@types/react": "^17.0.45",
		"@types/react-dom": "^17.0.17",
		"autoprefixer": "^10.4.7",
		"concurrently": "^7.2.1",
		"eslint": "^8.15.0",
		"json-server": "^0.17.0",
		"postcss": "^8.4.14",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.6.4"
	},
	"engines": {
		"node": ">=14"
	}
}
